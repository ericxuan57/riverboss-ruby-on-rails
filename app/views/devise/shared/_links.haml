- if controller_name != 'sessions'
  %h3
    Already have an account?
    = link_to "Login", new_session_path(resource_name)

- if devise_mapping.registerable? && controller_name != 'registrations'
  %h3
    = link_to "Register directly ", new_registration_path(resource_name, redirect_to: params[:redirect_to])
    with RiverBoss.com

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %h3
    Forgot your password?
    = link_to "Click here", new_password_path(resource_name)

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %h3= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %h3= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)

- if devise_mapping.omniauthable?
  .social-network
    .frame
      %h3 Or Sign Up ‚ÅÑ LogIn via
      %ul
        - resource_class.omniauth_providers.each do |provider|
          %li
            = link_to "Login with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "#{provider.to_s}"
    %br/
