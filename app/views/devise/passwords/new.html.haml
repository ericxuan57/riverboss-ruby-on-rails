- set_meta_tags(description: "Forgot your password page", title: "Forgot your password page | RiverBoss")

.my-river-area
  .head-part
    %h1 Forgot your password?
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true
  .form-actions
    = f.button :submit, "Send me reset password instructions"

.social-network
  .frame
    %h4 Register or login with
    %ul
      - resource_class.omniauth_providers.each do |provider|
        %li
          = link_to "Login with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "#{provider.to_s}"

%h4
  Already have an account?
  = link_to "Login", new_session_path(resource_name)

%h4
  Or
  = link_to "Register directly ", new_registration_path(resource_name, redirect_to: params[:redirect_to])
  with RiverBoss.com
