:ruby
  url         = states_url
  title       = "Region List | RiverBoss"
  description = "Get river conditions from these region list"
  keywords    = "rivers,regions,river conditions"

  set_meta_tags(description: description,
    keywords: keywords,
    title: title,
    twitter: { card: "summary", site: "@riverboss", url: url, title: title, description: description },
    og: { title: title, url: url, type: "website", description: description, site_name: "RiverBoss" },
    canonical: url)

%section#content
  .content-holder
    .btn-holder= link_to "Suggest", contact_path, class: :btn
    %h1 Regions

  %table
    - @regions.each do |r|
      %tr
        %td.col1= link_to r.name, region_path(r)