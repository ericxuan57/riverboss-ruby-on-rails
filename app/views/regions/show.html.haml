:ruby
  url         = region_url(@region)
  title       = "Region: #{@region.name} | RiverBoss"
  description = "Get river conditions in #{@region.name}"
  keywords    = "#{@region.name},rivers,flow,conditions,fishing,report,river,gauge,CFS,weather,radar,forecast"

  set_meta_tags(description: description,
    keywords: keywords,
    title: title,
    twitter: { card: "summary", site: "@riverboss", url: url, title: title, description: description },
    og: { title: title, url: url, type: "website", description: description, site_name: "RiverBoss" },
    canonical: url)

.my-river-area
  .head-part
    %ul
      %li= link_to "Suggest", contact_path, class: :btn
    %h1 Region: #{@region.name}

= render "shared/river_table", rivers: @rivers

= render 'shared/home_page_info'