!!! 5
%html{ xmlns: "http://www.w3.org/1999/xhtml", "xml:lang" => "en", lang: "en" }

  %head
    = display_meta_tags
    = render "layouts/favicons"
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    = stylesheet_link_tag "https://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700", "data-turbolinks-track" => true, media: "all"
    = javascript_include_tag "https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js", async: true, "data-ad-client" => "ca-pub-9646142879731590"
    /[if lt IE 9]
      = javascript_include_tag "html5shiv", "data-turbolinks-track" => true
  %body{class: ('admin' if admin_signed_in?)}
    #wrapper
      %header#header
        .holder
          %strong.logo
            = link_to "RiverBoss", root_path
          %ins.adsbygoogle{"data-ad-client" => "ca-pub-9646142879731590", "data-ad-format" => "auto", "data-ad-slot" => "4532965063", :style => "display:block"}
          :javascript
            (adsbygoogle = window.adsbygoogle || []).push({});

      #main
        .main-holder
          .content-holder
            .content-frame
              = render "layouts/main_nav"
              = render "layouts/search_form"
            #content
              = yield
            = render "layouts/bottom_nav"
          %aside#sidebar
            = render "layouts/aside"

      %footer#footer
        .holder
          %p
            Copyright #{Date.today.year}
            = link_to "RiverBoss.com.", root_url
            All Rights Reserved.
          %ul.link-area
            %li= link_to "Disclaimer", "/pages/disclaimer"
            %li= link_to "Advertise", "/contact"
            %li= link_to "Default Conditions", default_conditions_rivers_path
            %li= link_to "About", "/pages/about"
            %li= link_to "News", posts_path

    .page-loading
    .modal
      .inner-modal
        #modal_close
        #modal_content

    = image_tag "na.png", id: "not_available"

    = render "layouts/flashes"

    = render "layouts/admin_nav" if admin_signed_in?

    = javascript_include_tag "application", "addOtherFiles", "here", "etc", "data-turbo-track": "reload", "data-turbolinks-track" => true
    = javascript_include_tag "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-530b4e5e44532e57"

    - if Rails.env.production?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-20872318-1', 'auto');
        ga('send', 'pageview');
